<div class="container-full">

    <div class="row">

        <div class="col-lg-12 text-center v-center">

            <h1>ReleaseTracker</h1>
            <p class="lead">Fetch detailed information for Github Releases</p>

            <br>

            <form class="col-lg-12">
                <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
                    <input class="center-block form-control input-lg" title="Paste your repository url" placeholder="https://github.com/mbStavola/ReleaseTracker/" type="text">
                    <span class="input-group-btn"><button class="btn btn-lg btn-primary" type="button">SHOW</button></span>
                </div>
            </form>
        </div>

    </div> <!-- /row -->

    <br><br><br><br><br>

</div> <!-- /container full -->

<div class="container">

    <hr>

    {{#each releases}}

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{url}}"><h3>{{name}}</h3></a>
                </div>
                <div class="panel-body">
                    <h4>Author:</h4>
                        <a href="{{author.html_url}}">
                            <img src="{{author.avatar_url}}" alt="{{author.login}}">
                        </a>

                    <br><br>

                    <h4>Details:</h4>
                    {{#each assetTable}}
                        <table>
                            <tr>
                                <td>{{@key}}</td>
                                <td>{{this}}</td>
                            </tr>
                        </table>
                    {{/each}}

                    <br><br>

                    <h4>Assets:</h4>
                    <thead>
                        <th>Uploader</th>

                        <th>Name</th>
                        <th>Label</th>

                        <th>State</th>
                        <th>Size</th>

                        <th>Created</th>
                        <th>Updated</th>

                        <th>Download Count</th>
                        <th>Download</th>
                    </thead>

                    {{#each assets}}
                        <tbody>
                            <td>
                                <a href="{{uploader.html_url}}">
                                    <img src="{{uploader.avatar_url}}" alt="{{uploader.login}}">
                                </a>
                            </td>

                            {{#each assetTable}}
                                <td>{{this}}</td>
                            {{/each}}

                            <td>
                                <a href="{{browser_download_url}}">
                                    <img src="">
                                </a>
                            </td>
                        </tbody>
                    {{/each}}
                </div>
            </div>
        </div>
    {{/each}}

    <div class="row">
        <div class="col-lg-12">
            <br><br>
            <p class="pull-right"><a href="http://www.bootply.com">Template from Bootply</a> &nbsp; Â©Copyright 2013 ACME<sup>TM</sup> Brand.</p>
            <br><br>
        </div>
    </div>
</div>

